<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Archetype Created Web Application</display-name>

    <filter>
        <filter-name>digestFilter</filter-name>
        <filter-class>com.ustc.yolk.web.filer.WebDigestFilter</filter-class>
    </filter>
    <filter>
        <filter-name>redirector</filter-name>
        <filter-class>com.ustc.yolk.web.filer.DefaultRedirectFilter</filter-class>
        <init-param>
            <param-name>redirectUrl</param-name>
            <param-value>index.html</param-value>
        </init-param>
        <init-param>
            <param-name>appName</param-name>
            <param-value>yolk</param-value>
        </init-param>
    </filter>
    <servlet>
        <servlet-name>springmvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <filter-mapping>
        <filter-name>digestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>redirector</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>springmvc</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
